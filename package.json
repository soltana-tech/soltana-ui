{
  "name": "soltana-ui-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.30.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:e2e:visual": "playwright test tests/visual-regression.spec.ts",
    "test:e2e:a11y": "playwright test tests/accessibility.spec.ts",
    "test:e2e:config": "playwright test tests/config/",
    "test:e2e:enhancers": "playwright test tests/enhancers/",
    "test:e2e:full": "FULL_MATRIX=1 playwright test tests/visual-regression.spec.ts",
    "test:a11y-matrix": "playwright test --config playwright.a11y-matrix.config.ts",
    "test:all": "turbo run test && playwright test",
    "lint": "turbo run lint",
    "lint:ts": "turbo run lint:ts",
    "lint:style": "turbo run lint:style",
    "type-check": "turbo run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "sync:mplstyle": "cp packages/tokens/dist/matplotlib/*.mplstyle python/soltana-matplotlib/soltana_matplotlib/",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook installation'"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "stylelint": "^17.2.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-prettier": "^5.0.3",
    "turbo": "^2.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild"
    ]
  }
}
