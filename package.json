{
  "name": "soltana-tech",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "./dist/soltana-tech.umd.cjs",
  "module": "./dist/soltana-tech.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/soltana-tech.js",
      "require": "./dist/soltana-tech.umd.cjs"
    },
    "./style.css": "./dist/soltana-tech.css",
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/soltana-tech.js"
    }
  },
  "scripts": {
    "dev": "npm run docs:dev",
    "build": "tsc --noEmit && vite build",
    "docs:dev": "DOCS=true vite --config vite.config.ts",
    "docs:build": "DOCS=true vite build --config vite.config.ts",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "eslint .",
    "lint:style": "stylelint \"**/*.{css,scss}\" --allow-empty-input",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook installation'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "sass": "^1.97.3",
    "stylelint": "^17.2.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  }
}
