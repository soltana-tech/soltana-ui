{
  "name": "soltana-ui",
  "version": "1.0.0",
  "description": "A CSS-first design system inspired by classical architecture and precious materials. Features neumorphic, glassmorphic, and hybrid material systems with a 4-tier configuration model.",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": "Soltana",
  "homepage": "https://github.com/soltana/soltana-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/soltana/soltana-ui.git"
  },
  "keywords": [
    "design-system",
    "css",
    "scss",
    "neumorphic",
    "glassmorphic",
    "ui-library",
    "design-tokens",
    "theming"
  ],
  "files": [
    "dist",
    "src/styles",
    "src/config",
    "soltana.config.template.js"
  ],
  "main": "./dist/soltana-ui.umd.cjs",
  "module": "./dist/soltana-ui.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/soltana-ui.umd.cjs",
  "jsdelivr": "./dist/soltana-ui.umd.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/soltana-ui.js",
      "require": "./dist/soltana-ui.umd.cjs"
    },
    "./css": "./dist/soltana-ui.css",
    "./style.css": "./dist/soltana-ui.css",
    "./scss": "./src/styles/index.scss",
    "./scss/*": "./src/styles/*"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "dev": "npm run docs:dev",
    "build": "tsc --noEmit && vite build",
    "docs:dev": "DOCS=true vite --config vite.config.ts",
    "docs:build": "DOCS=true vite build --config vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "eslint .",
    "lint:style": "stylelint \"**/*.{css,scss}\" --allow-empty-input",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook installation'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "sass": "^1.97.3",
    "stylelint": "^17.2.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "sass": "^1.50.0"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    }
  }
}
