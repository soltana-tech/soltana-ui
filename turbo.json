{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "tsconfig.*.json", "vite.config.*", "package.json"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**", "vitest.config.*"]
    },
    "lint": { "dependsOn": ["^build"] },
    "lint:ts": { "dependsOn": ["^build"] },
    "lint:style": {},
    "type-check": {
      "inputs": ["src/**", "tsconfig.json", "tsconfig.*.json"]
    }
  }
}
